<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.handy.led.MainActivity"
    android:background="@color/background">

    <ImageView
        app:srcCompat="@drawable/bedroom_1"
        android:id="@+id/imageView4"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        app:srcCompat="@drawable/lightbulb"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="24dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <ImageView
        app:srcCompat="@drawable/door"
        android:layout_marginTop="60dp"
        android:id="@+id/imageView7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView6"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />

    <ImageView
        app:srcCompat="@drawable/alarm"
        android:layout_marginTop="50dp"
        android:id="@+id/imageView6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView5"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5" />

    <ImageView
        app:srcCompat="@drawable/off"
        android:id="@+id/imageView11"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignLeft="@+id/imageView10"
        android:layout_alignStart="@+id/imageView10" />

    <ImageView
        app:srcCompat="@drawable/closed"
        android:id="@+id/imageView9"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_alignTop="@+id/imageView7"
        android:layout_alignLeft="@+id/imageView11"
        android:layout_alignStart="@+id/imageView11"
        android:layout_marginStart="-6dp"
        android:layout_marginLeft="-6dp"/>

    <Switch android:id="@+id/switchButton2"
        android:layout_height="wrap_content"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignRight="@+id/switchButton1"
        android:layout_alignEnd="@+id/switchButton1" />

    <Switch
        android:id="@+id/switchButton3"
        android:layout_height="wrap_content"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:layout_width="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignRight="@+id/switchButton2"
        android:layout_alignEnd="@+id/switchButton2" />

    <Switch
        android:id="@+id/switchButton1"
        android:layout_height="wrap_content"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="-190dp" />

    <ImageView
        app:srcCompat="@drawable/off"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="37dp"
        android:id="@+id/imageView10"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>